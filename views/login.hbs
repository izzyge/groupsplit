<div class = "login">
  <div class = "container">
    <div class = "row justify-content-center">
      <div class = "col-3">


      <form action="/login" method="post">
        <legend>Log In</legend>



        <div class="form-group login-input">
          <label for="user-username">Username</label>
          <input type="text" name="username" class="form-control" id="user-username" autocomplete="off">
        </div>

        <div class="form-group login-input">
          <label for="user-password">Password</label>
          <input type="password" name="password" class="form-control" id="user-password" autocomplete="off">
        </div>

        <div class="text-right login-submit-button">
          <button type="submit" class="btn btn-outline-light">Submit</button>
        </div>

      </form>

      </div>
    </div>
  </div>
</div>
