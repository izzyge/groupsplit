              <a class="nav-link" href="/logout">Log Out</a>
            {{else}}
              <a class="nav-link" href="/login"><span>Already have an account?</span> log in</a>
            {{/if}}
          </div>
          </div>
        </div>
      </nav>
      <main>
        {{{body}}}
